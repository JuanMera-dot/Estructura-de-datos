using System;
using System.Collections.Generic;

namespace EstructurasDeDatos 
{
    // CLASE DEL OBJETO
    public class PaginaWeb
    {
        public string Titulo { get; set; }
        public string Url { get; set; }
        public DateTime HoraVisita { get; set; }

        public PaginaWeb(string titulo, string url)
        {
            Titulo = titulo;
            Url = url;
            HoraVisita = DateTime.Now;
        }
    }

    public class Navegador
    {
        private Stack<PaginaWeb> historial = new Stack<PaginaWeb>();

        public void IrAPagina(string titulo, string url)
        {
            PaginaWeb nuevaPagina = new PaginaWeb(titulo, url);
            historial.Push(nuevaPagina);
            Console.WriteLine($"--> Navegando a: {titulo}");
        }

        public void Regresar()
        {
            if (historial.Count > 0)
            {
                PaginaWeb paginaCerrada = historial.Pop();
                Console.WriteLine($"<-- Regresando de: {paginaCerrada.Titulo}");
                
                if (historial.Count > 0)
                    Console.WriteLine($"   Estás ahora en: {historial.Peek().Titulo}");
                else
                    Console.WriteLine("   Estás en la página de inicio.");
            }
            else
            {
                Console.WriteLine("(!) Historial vacío.");
            }
        }
    }

    // CLASE PRINCIPAL 
    class Program
    {
        static void Main(string[] args)
        {
            Navegador miChrome = new Navegador();
            
            // Simulación simple 
            miChrome.IrAPagina("Google", "www.google.com");
            miChrome.IrAPagina("Facebook", "www.facebook.com");
            
            Console.WriteLine("\n--- Presionando Atrás ---");
            miChrome.Regresar();
            
            Console.WriteLine("\nPresiona ENTER para salir...");
            Console.ReadLine();
        }
    }
}
