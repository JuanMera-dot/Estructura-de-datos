using System;

namespace RegistroDeEstudiantes
{
    // 1. Definimos la clase Estudiante
    class Estudiante
    {
        // Datos basicos
        public string ID;
        public string Nombres;
        public string Apellidos;
        public string Direccion;
        
        // Array para los 3 telefonos (móvil, casa, etc.)
        public string[] Telefonos = new string[3];
    }

    class Program
    {
        static void Main(string[] args)
        {
            // Crear el objeto estudiante
            Estudiante miEstudiante = new Estudiante();

            Console.WriteLine("--- REGISTRO DE DATOS ---");

            // Pedir datos básicos
            Console.Write("Ingrese el ID: ");
            miEstudiante.ID = Console.ReadLine();

            Console.Write("Ingrese Nombres: ");
            miEstudiante.Nombres = Console.ReadLine();

            Console.Write("Ingrese Apellidos: ");
            miEstudiante.Apellidos = Console.ReadLine();

            Console.Write("Ingrese Direccion: ");
            miEstudiante.Direccion = Console.ReadLine();

            Console.WriteLine("\n--- Ingrese los 3 numeros de telefono ---");

            // Ciclo for para pedir los teléfonos uno por uno
            // Usamos un bucle simple que va del 0 al 2
            for (int i = 0; i < 3; i++)
            {
                Console.Write("Teléfono " + (i + 1) + ": ");
                miEstudiante.Telefonos[i] = Console.ReadLine();
            }

            // Mostrar la información ingresada
            Console.WriteLine("\n=================================");
            Console.WriteLine("       REPORTE DE ESTUDIANTE       ");
            Console.WriteLine("=================================");
            
            Console.WriteLine("ID: " + miEstudiante.ID);
            Console.WriteLine("Nombre Completo: " + miEstudiante.Nombres + " " + miEstudiante.Apellidos);
            Console.WriteLine("Dirección: " + miEstudiante.Direccion);
            
            Console.WriteLine("Lista de Teléfonos:");
            
            // Ciclo para mostrar los teléfonos guardados en el array
            for (int i = 0; i < 3; i++)
            {
                Console.WriteLine("- " + miEstudiante.Telefonos[i]);
            }
            
            Console.WriteLine("=================================");
            Console.WriteLine("Fin del programa.");
            Console.ReadKey(); // Espera una tecla para cerrar
        }
    }
}
